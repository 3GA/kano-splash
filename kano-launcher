#!/bin/bash

# Usage: kano-launcher cmd [preset]
#        kano-launcher cmd [preset]
#        kano-launcher cmd [preset]

. make-common

restart_daemons

if [ -z "$1" ]; then
    exit 1
fi

eval "$1 &"
pid="$!"
#sleep 1

# Apply window presets
case "$2" in
    make-video)
        kano-window-tool -t "Make Video" -dno -w0.8 -h0.6 -c -f ;;
    make-snake)
        kano-window-tool -t "Make Snake" -dno -m -f ;;
    extras)
        kano-window-tool -t "extras" -c -f ;;
esac

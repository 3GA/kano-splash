# Debug script to collect all events thrown by the dhcpcd daemon
#
# TODO: find a way to dynamically enable/disable this module
#

logfile=/tmp/kano-dhcp-debug.log

echo "kano-debug reason: $reason ..." >> $logfile
echo ">>> ifup? $if_up interface? $interface carrier? $ifcarrier wireless? $ifwireless ssid=$ifssid" >> $logfile
ip addr show wlan0 >> $logfile

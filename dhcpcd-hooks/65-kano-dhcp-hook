# DHCP hook script to prepare Kano OS settings when network comes up
#
# TODO: This is an initial first version
#

logfile="/tmp/kano-dhcp-hook.log"

# TODO: Discern from multiple network devices
if [ "$reason" == "REBOOT" ]; then
    systemd-run /usr/bin/kano-sentry-startup
    systemd-run /usr/bin/kano-set-system-date

    systemd-run /usr/bin/kano-network-hook boot
    systemd-run /usr/bin/kano-dashboard-sysupdates boot
fi
